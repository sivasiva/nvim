snippet acc "summary + list"
.title
	%i.ui.dropdown.icon
	$1
.content
	- if details[ :$2 ][ :summary ].present?
		%p= details[ :$2 ][ :summary ]
	- if details[ :$2 ][ :list ].present?
		.ui.bulleted.list
			- details[ :$2 ][ :list ].each do |item|
				.item= item
$0
endsnippet
snippet acc "nested"
.title
	%i.ui.dropdown.icon
	$1
.content
	- if details[ :$1 ][ :$2 ][ :summary ]
		.ui.dividing.header $3
		%p= details[ :$1 ][ :$2 ][ :summary ]
	- if details[ :$1 ][ :$2 ][ :list ]
		.ui.segment
			.ui.tiny.dividing.header $3
			.ui.bulleted.list
				- details[ :$1 ][ :$2 ][ :list ].each do |i|
					.item= i
endsnippet
