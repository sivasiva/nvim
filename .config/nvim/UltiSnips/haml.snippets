snippet ff "form_for field"
.required.field
	= ${1:f}.label :$2, '$3'
	= $1.text_field :$2, placeholder: '$3'
$0
endsnippet
snippet dd "Semantic Dropdown for fields_for"
.required.field
	= f.label :$1
	.ui.fluid.selection.dropdown
		= f.hidden_field :$1
		.text $2
		%i.dropdown.icon
		.menu
			- [].each_with_index do |s, idx|
				.item{ data: { value: idx } }= s
endsnippet
snippet dd "Profile form"
.required.field
	= f.label :$1
	.ui.fluid.selection.dropdown
		= f.hidden_field :$1
		.text $2
		%i.dropdown.icon
		.menu
			- survey.options( @instr.profile_step, :$1 ).each_with_index do |s, idx|
				.item{ data: { value: idx } }= s
$0
endsnippet
snippet proform
- survey = @instr.survey

.ui.segment
	%h4.ui.dividing.header $1
	= form_for @instr, as: :instructor, url: instructor_path( @instr ), html: { class: 'ui small form', id: 'instr-profile-$2' }, remote: true do |instr|
		= instr.fields_for :profile, OpenStruct.new( instr.object.profile ) do |profile|
			= profile.fields_for :$2, OpenStruct.new( profile.object.$2 ) do |f|
				$0

		.ui.divider
		= instr.button class: 'ui orange right labeled icon button' do
			Save &amp; Continue
			%i.ui.right.arrow.icon
endsnippet
